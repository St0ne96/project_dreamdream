    <script></script>
    <script>
      let id = "<%=data.id%>";
      function customerModify() {
        let nickname = $("#nickname").val();
        let name = $("#name").val();
        let email = $("#email").val();
        let point = $("#point").val();
        $.ajax({
          type: "PUT",
          url: `/management/customer/modify/${id}`,
          contentType: "application/json",
          dataType: "json",
          data: JSON.stringify({
            nickname: nickname,
            name: name,
            email: email,
            point: point,
          }),
          success: function (response) {
            console.log(id);
            alert("수정 성공");
          },
        });
      }

      function customerDelete() {
        let pw = "<%=data.password%>";
        const password = prompt("계정을 삭제하시려면 비밀번호를 입력해주세요");
        if (password === pw) {
          console.log(password, pw);
          $.ajax({
            type: "DELETE",
            url: `/management/customer/delete/${id}`,
            contentType: "application/json",
            dataType: "json",
            data: JSON.stringify({ password: password, id: id }),
            success: function (response) {
              console.log(id);
              alert("삭제 완료");
            },
          });
        }
      }
    </script>
